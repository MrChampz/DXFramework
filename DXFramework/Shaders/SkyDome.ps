/////////////////////////////////////////////
//	SAMPLERS
/////////////////////////////////////////////
SamplerState SamplerType;

/////////////////////////////////////////////
//	TEXTURES
/////////////////////////////////////////////
TextureCube cubeMap;

/////////////////////////////////////////////
//	TYPEDEFS
/////////////////////////////////////////////
struct PixelInputType
{
	float4 position : SV_POSITION;
	float3 tex : TEXCOORD0;
};

/////////////////////////////////////////////
//	Pixel Shader
/////////////////////////////////////////////
float4 SkyDomePixelShader(PixelInputType input) : SV_TARGET
{
	float4 outputColor;

	// Sample the texture pixel color to outputColor
	outputColor = cubeMap.Sample(SamplerType, input.tex);

    return outputColor;
}
